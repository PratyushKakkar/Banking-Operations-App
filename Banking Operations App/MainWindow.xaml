<Window x:Class="Banking_Operations_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Banking_Operations_App"
        mc:Ignorable="d"
        Title="MainWindow" Height="355" Width="383" Background="#FFFCFAFA" Loaded="Window_Loaded">

     <Grid>
          <Grid.ColumnDefinitions>
               <ColumnDefinition/>
               <ColumnDefinition Width="0*"/>
          </Grid.ColumnDefinitions>
          <Menu x:Name="menuStrip" FontFamily="Times New Roman" FontSize="22" Margin="0,0,0,297">
               <MenuItem x:Name="mnuFile" Header="File" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,5,0,0" FontWeight="Bold">
                    <MenuItem x:Name="mnuLogin" Header="Login"/>
                    <MenuItem x:Name="mnuExit" Header="Exit" Click="mnuExit_Click"/>
               </MenuItem>
               <MenuItem x:Name="mnuAccount" Header="Account" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5,5,0,0" FontWeight="Bold">
                    <MenuItem x:Name="mnuNewAccount" Header="New Account" Click="mnuNewAccount_Click"/>
                    <MenuItem x:Name="mnuEditAccount" Header="Edit Account"/>
                    <MenuItem x:Name="mnuDepositFunds" Header="Deposit Funds"/>
                    <MenuItem x:Name="mnuWithdrawFunds" Header="Withdraw Funds"/>
                    <MenuItem x:Name="mnuTransferFunds" Header="Transfer Funds"/>
                    <MenuItem x:Name="mnuViewTransactions" Header="View Transactions"/>
               </MenuItem>
          </Menu>
          <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Margin="190,73,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="173" Cursor="None" FontFamily="Times New Roman" FontSize="22" Padding="5,5,5,5" AutomationProperties.HelpText="AdminPratyush" AutomationProperties.IsRequiredForForm="True" TextChanged="txtUsername_TextChanged" TabIndex="1" Height="35"/>
          <Label x:Name="lblUsername" Content="Username:" HorizontalAlignment="Left" Margin="36,71,0,0" VerticalAlignment="Top" Height="38" Width="131" FontSize="25"/>
          <Label x:Name="lblPassword" Content="Password:" HorizontalAlignment="Left" Margin="38,147,0,0" VerticalAlignment="Top" Height="38" Width="124" FontSize="25"/>
          <Button x:Name="btnForgotPassword" HorizontalAlignment="Left" Margin="185,227,0,0" VerticalAlignment="Top" Background="Transparent" Foreground="#FF00856A" Padding="5,5,5,5" BorderThickness="0,0,0,0" Height="51" Width="178" Click="btnForgotPassword_Click" Cursor="Hand" TabIndex="4">
               <TextBlock Height="48" Width="176" FontSize="18"><Underline><Run Text="Forgot Password..."/></Underline></TextBlock>
          </Button>
          <Button x:Name="btnLogin" Content=" Login " HorizontalAlignment="Left" Margin="64,257,0,0" VerticalAlignment="Top" Click="btnLogin_Click" TabIndex="3"/>
          <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="191,147,0,0" VerticalAlignment="Top" Width="172" Height="35" PasswordChar="*" PasswordChanged="txtPassword_PasswordChanged" TabIndex="2" FontSize="22"/>
          <Label x:Name="txtUsernameValidation" HorizontalAlignment="Left" Margin="192,113,0,0" VerticalAlignment="Top" Height="22" Width="134" FontSize="12" Foreground="#FFFF0B0B"/>
          <Label x:Name="txtPasswordValidation" HorizontalAlignment="Left" Margin="192,188,0,0" VerticalAlignment="Top" Height="22" Width="134" FontSize="12" Foreground="#FFFF0B0B"/>
          <Label x:Name="lblLoginValidation" Content="" HorizontalAlignment="Left" Margin="164,281,0,0" VerticalAlignment="Top" Height="22" Width="134" FontSize="12" Foreground="#FFFF0B0B"/>
     </Grid>
</Window>
